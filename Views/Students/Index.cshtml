@model IEnumerable<quizapp.Models.Student>;

@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5 mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                        <div class="ms-2 c-details">
                            <h6 class="mb-0">Mailchimp</h6> <span>1 days ago</span>
                        </div>
                    </div>
                    <div class="badge"> <span>Design</span> </div>
                </div>
                <div class="mt-5">
                    <h3 class="heading">Senior Product<br>Designer-Singapore</h3>
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3"> <span class="text1">32 Applied <span class="text2">of 50 capacity</span></span> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="cards">
    @foreach (var item in Model)
    {
        <li>

            <p>@item.student_name</p>
            <form asp-action="ViewHotel">
                <input type="hidden" name="id" value="">
                <input type="submit" value="View" class="btn ms-3 mb-3 btn-primary">
            </form>
            <form asp-action="DeleteHotel">
                <input type="hidden" name="id" value="">
                <input type="submit" class="btn mb-3 btn-danger" value="Delete">
            </form>

        </li>
        <hr>
    }
</ul>